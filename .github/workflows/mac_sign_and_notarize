name: Mac Codesign and Notarization

on:
  push:
    tags:
      - "v[0-9]+.[0-9]+.[0-9]+-?*"

jobs:
  sign:
    runs-on: macos-14
    steps:
      - name: Checkout Code
        uses: actions/checkout@v4
        with:
          file: path/to/binary
          certificate-data: ${{ secrets.APPLE_CERT_DATA }}
          certificate-id: ${{ secrets.APPLE_CERT_ID }}
          certificate-password: ${{ secrets.APPLE_CERT_PASSWORD }}
